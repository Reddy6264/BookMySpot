<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar" />

    <style name="AppTheme" parent="@style/AppBaseTheme">
        <item name="android:editTextStyle">@style/AppTheme_EditTextStyle</item>
        <item name="android:textViewStyle">@style/AppTheme_TextviewTextStyle</item>
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:radioButtonStyle">@style/MyRadioButtonStyle</item>
        <item name="android:spinnerStyle">@style/spinner_style</item>
        <item name="android:spinnerItemStyle">@style/custom_SpinnerItem</item>
    </style>

    <style name="AppTheme_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:background">@drawable/edittext_focude_effect</item>
    </style>

    <style name="Custom_EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance"> @android:attr/textAppearanceLarge</item>
        <item name="android:textColorHint">@android:color/darker_gray</item>
        <item name="android:background">@drawable/edittext_focude_effect</item>
    </style>

    <style name="AppTheme_TextviewTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="Label_TextviewTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="FormContainer">
        <item name="android:padding">10.0dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- Action bar styles -->

    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@drawable/ic_title</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:titleTextStyle">@style/NoTitleText</item>
        <item name="android:subtitleTextStyle">@style/NoTitleText</item>
    </style>

    <!-- <item name="android:icon">@android:color/transparent</item> -->
    <!-- <item name="android:displayOptions"></item> -->

    <style name="NoTitleText">
        <item name="android:textSize">0sp</item>
        <item name="android:textColor">#00000000</item>
    </style>

    <style name="SpinnerDropDownItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">#ffffffff</item>
        <!-- <item name="android:background">@drawable/dropdown_style</item> -->
        <item name="android:padding">10dp</item>
    </style>

    <style name="MyRadioButtonStyle" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:button">@drawable/gradient_radio_button</item>
    </style>

    <style name="spinner_style" parent="@android:style/Widget.Spinner">
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:dropDownHorizontalOffset">0.0dip</item>
        <item name="android:dropDownVerticalOffset">0.0dip</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>

    <style name="custom_spinner_style" parent="@android:style/Widget.Spinner">
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:dropDownHorizontalOffset">0.0dip</item>
        <item name="android:dropDownVerticalOffset">0.0dip</item>
        <item name="android:spinnerMode">dropdown</item>
    </style>

    <style name="SpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingLeft">10dp</item>
        <!-- <item name="android:paddingRight">10.0dip</item> -->
    </style>

    <style name="custom_SpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:paddingLeft">0dp</item>
        <!-- <item name="android:paddingRight">10.0dip</item> -->
    </style>

    <style name="WheelDemoTheme.Light" parent="android:Theme.Light"></style>

    <style name="WheelDemoTheme" parent="android:Theme"></style>

</resources>